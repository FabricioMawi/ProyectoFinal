@model prueba1.Models.Proyecto

@{
    ViewBag.Title = "Reporte";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Reporte de proyecto</h2>
<br />

<h3>Proyecto</h3>
<table class="table table-striped table-bordered display dataTable" style="color:steelblue">
    <tr>
        <th>
            Nombre de proyecto
        </th>
        <th>
            Tecnología
        </th>
        <th>
            Estado de proyecto
        </th>
        <th>
            Fecha de inicio
        </th>
        <th>
            Fecha de finalización
        </th>
        <th>
            Nombre del curso
        </th>
        <th>
            Nombre de la empresa
        </th>
        <th>
            Nombre del grupo
        </th>
        <th>
            Nombre del profesor
        </th>
    </tr>

    <tr>
        <td>
            @Html.DisplayFor(modelItem => Model.nombreProyecto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => Model.tecnologia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => Model.estadoProyecto)
        </td>
        <td>
            @Html.DisplayFor(model => model.fechaInicio)
        </td>
        <td>
            @Html.DisplayFor(model => model.fechaFinalizado)
        </td>
        <td>
            @Html.DisplayFor(model => model.Curso.nombreCurso)
        </td>
        <td>
            @Html.DisplayFor(model => model.Empresa.nombreEmpresa)
        </td>
        <td>
            @Html.DisplayFor(model => model.Grupo.nombreGrupo)
        </td>
        <td>
            @Html.DisplayFor(model => model.Profesor.nombreProfesor)
        </td>
    </tr>

</table>

<h3>Comentarios del proyecto</h3>
<table class="table table-striped table-bordered display dataTable" style="color:steelblue">
    <tr>
        <th>Fecha</th>
        <th>Comentario</th>
    </tr>
    @if (Model.Comentario.Count > 0)
    {
        foreach (var comm in Model.Comentario)
        {
            <tr>
                <td>@comm.fecha</td>
                <td>@comm.contenido</td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="3">No se han subido comentarios</td>
        </tr>
    }
</table>


<div class="form-group">
    <div> <a href="@Url.Action("createReport", new {tipo="Excel", id=Model.idProyecto})"> Descargar reporte como documento de Excel </a> </div>
    <div> <a href="@Url.Action("createReport", new {tipo="Word", id=Model.idProyecto})"> Descargar reporte como documento de Word </a> </div>
</div>
<br />
<div>
    @Html.ActionLink("Volver a la lista", "Index")
</div>
