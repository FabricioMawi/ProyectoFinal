@model IEnumerable<prueba1.Models.Proyecto>

@{
    ViewBag.Title = "Reporte";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Reporte de todos los proyectos</h2>
<br />

<h3>Proyectos</h3>
<table class="table table-striped table-bordered display dataTable" style="color:steelblue">
    <tr>
        <th>
            Nombre de proyecto
        </th>
        <th>
            Tecnología
        </th>
        <th>
            Estado de proyecto
        </th>
        <th>
            Fecha de inicio
        </th>
        <th>
            Fecha de finalización
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombreProyecto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tecnologia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estadoProyecto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fechaInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fechaFinalizado)
            </td>
        </tr>
    }

</table>


<div class="form-group">
    <div> <a href="@Url.Action("createReportAll", new {tipo="Excel"})"> Descargar reporte como documento de Excel </a> </div>
    <div> <a href="@Url.Action("createReportAll", new { tipo="Word" })"> Descargar reporte como documento de Word </a> </div>
</div>
<br />
<div>
    @Html.ActionLink("Volver a la lista", "Index")
</div>
