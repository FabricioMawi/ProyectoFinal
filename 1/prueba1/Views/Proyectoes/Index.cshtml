@model IEnumerable<prueba1.Models.Proyecto>


@{
    ViewBag.Title = "Index";
}

<h2>Proyectos</h2>


@using (Html.BeginForm())
{
    <p>
       @Html.TextBox("SearchString")
        <input type="submit" value="Buscar" class="btn btn-primary btn-sm" style="background-color:navy" />
    </p>
}
<p>
    @Html.ActionLink("Agregar ", "Create")
</p>
<div class="row justify-content-center">
    <div class="form-control-static">
        <table class="table table-striped table-bordered display dataTable" style="color:steelblue">

            <tr>
                <th>
                    ID del proyecto
                </th>
                <th>
                    Nombre
                </th>
                <th>
                    Tecnologia
                </th>
                <th>
                    Estado del proyecto
                </th>
                <th>
                    Fecha de inicio
                </th>
                <th>
                    Fecha de finalización
                </th>
                <th>
                    Curso
                </th>
                <th>
                    Empresa
                </th>
                <th>
                    Grupo
                </th>
                <th>
                    Profesor
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.idProyecto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.nombreProyecto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.tecnologia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.estadoProyecto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.fechaInicio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.fechaFinalizado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Curso.nombreCurso)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Empresa.nombreEmpresa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Grupo.idGrupo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Profesor.nombreProfesor)
                    </td>

                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.idProyecto }) |
                        @Html.ActionLink("Ver contenido", "Details", new { id = item.idProyecto }) |
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.idProyecto })
                    </td>
                </tr>
            }

        </table>

    
    </div>

