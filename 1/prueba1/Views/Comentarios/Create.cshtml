@model prueba1.Models.Comentario

@{
    ViewBag.Title = "Create";
}

<h2> Nuevo Comentario</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row small-spacingr" style="margin-left: 35vh;">
        <div class="col-lg-10 col-xs-12">
            <div class="box-content card white">
                <div class="card-content">
                    <h4>Comentario</h4>
                    <h6>*Los campos marcados con un asterisco son obligatorios</h6>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label>Fecha*</label>
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.fecha, "Fecha", new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.fecha, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Contenido*</label>
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.contenido, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.contenido, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Proyecto*</label>
                        <div class="col-md-12">
                            @Html.DropDownList("idProyecto", ViewBag.idProyecto as SelectList, "--Seleccione un Proyecto--", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.idProyecto, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>


                <div class="form-group"style="padding: 5vh;">
                    <div class="col-md-offset-4 col-md-12">
                        <input type="submit" value="Agregar" class="btn btn-primary" style="background-color:navy" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="big mb-1" style="color: red;">
        @ViewBag.Error
    </div>
}

<div>
    @Html.ActionLink("Volver a la lista", "Index")
</div>
