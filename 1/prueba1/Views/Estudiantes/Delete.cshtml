@model prueba1.Models.Estudiante

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Eliminar </h2>

<h3>¿Seguro que desea eliminar este estudiante?</h3>
<div>
    <h4>Profesor</h4>
    <hr />
    <div class="row small-spacingr" style="margin-left: 35vh;">
        <div class="col-lg-10 col-xs-12">
            <div class="box-content card white">
                <dl class="dl-horizontal">
                    <dt>
                        Nombre
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.nombreEstudiante)
                    </dd>

                    <dt>
                        Nota
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.nota)
                    </dd>

                    <dt>
                        Grupo
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Grupo.nombreGrupo)
                    </dd>

                    <dt>
                        Profesor
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Profesor.nombreProfesor)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Eliminar" class="btn btn-danger" style="background-color:navy" />
                    </div>
                    <div>
                        @Html.ActionLink("Volver a la lista", "Index")
                    </div>
                }
            </div>
        </div>
    </div>
</div>
