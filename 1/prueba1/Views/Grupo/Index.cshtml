@model IEnumerable<prueba1.Models.Grupo>

@{
    ViewBag.Title = "Index";
}

<h2>Grupos</h2>


@using (Html.BeginForm())
{
    
    <p>
        @Html.TextBox("SearchString")
        <input type="submit" value="Buscar" class="btn btn-primary btn-sm" style="background-color:navy" />
    </p>
}
<p>
    @Html.ActionLink("Agregar", "Create")
</p>
<table class="table table-striped table-bordered display dataTable" style="color:steelblue">
    <tr>
        <th>
            Nombre del grupo
        </th>
        <th>
            Grupo
        </th>
        <th>
            Sede
        </th>
        <th>
            Cuatrimestre
        </th>
        <th>
            Curso
        </th>
        <th>
            Profesor
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(model => item.nombreGrupo)
            </td>
            <td>
                @Html.DisplayFor(model => item.idGrupo)
            </td>
            <td>
                @Html.DisplayFor(model => item.sede)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cuatrimestre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Curso.nombreCurso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Profesor.nombreProfesor)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.idGrupo }) |
                @Html.ActionLink("Ver contenido", "Details", new { id = item.idGrupo }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.idGrupo })
            </td>
        </tr>
    }

</table>
