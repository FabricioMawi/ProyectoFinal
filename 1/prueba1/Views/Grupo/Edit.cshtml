@model prueba1.Models.Grupo

@{
    ViewBag.Title = "Edit";
}

<h2>Editar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="row small-spacingr" style="margin-left: 35vh;">
    <div class="col-lg-10 col-xs-12">
        <div class="box-content card white">
            <div class="card-content">
                <h4>Grupo</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.idGrupo)

                <div class="form-group">
                    <label>Nombre del grupo*</label>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.nombreGrupo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.nombreGrupo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.idProfesor, "Profesor", htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-12">
                        @Html.DropDownList("idProfesor", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.idProfesor, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.sede, "Sede", htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-12">


                        @Html.DropDownListFor(model => model.sede, new SelectListItem[]
                      {
                          new SelectListItem() {Text = "Heredia" , Value = "Heredia"},
                          new SelectListItem() {Text = "San Pedro" , Value = "San Pedro"},
                          new SelectListItem() {Text = "Virtual" , Value = "Virtual"}
                       }, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.sede, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.idCurso, "Curso", htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-12">
                        @Html.DropDownList("idCurso", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.idCurso, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.cuatrimestre, "Cuatrimestre", htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.cuatrimestre, new SelectListItem[]
                        {
                            new SelectListItem() {Text = "Primer Cuatrimestre" , Value = "Primer Cuatrimestre"},
                            new SelectListItem() {Text = "Segundo Cuatrimestre" , Value = "Segundo Cuatrimestre"},
                            new SelectListItem() {Text = "Tercer Cuatrimestre" , Value = "Tercer Cuatrimestre"},
                        }, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.cuatrimestre, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <br />
                <div class="form-group"style="padding: 5vh;">
                    <div class="col-md-offset-4 col-md-12">
                        <input type="submit" value="Guardar Cambios" class="btn btn-primary" style="background-color:navy" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    }

    <div>
        @Html.ActionLink("Volver a la Lista", "Index")
    </div>
