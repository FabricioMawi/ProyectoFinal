@model IEnumerable<prueba1.Models.Empresa>

@{
    ViewBag.Title = "Reporte de Empresa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Reporte de empresas</h2>

<table  class="table table-striped table-bordered display dataTable" style="color:steelblue">
    <tr>
        <th>
           Nombre de la empresa
        </th>
        <th>
           Nombre del contacto
        </th>
        <th>
           Teléfono
        </th>
        <th>
            Correo electrónico
        </th>
        <th>
           Tipo de empresa
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombreEmpresa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombreContacto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.telefono)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tipoEmpresa)
        </td>
    </tr>
}

</table>

<div class="form-group">
    <div> <a href="@Url.Action("Report", new {id="Excel"})"> Descargar reporte como documento de Excel </a> </div>
    <div> <a href="@Url.Action("Report", new {id="Word"})"> Descargar reporte como documento de Word </a> </div>
</div>
<br />
<div>
    @Html.ActionLink("Volver a la lista", "Index")
</div>
