@model prueba1.Models.Empresa

@{
    ViewBag.Title = "Delete";
}

<h2>Eliminar</h2>

<h3>¿Seguro que desea eliminar esta empresa?</h3>
<div>
    <h4>Empresa</h4>
    <hr />
    <div class="row small-spacingr" style="margin-left: 35vh;">
        <div class="col-lg-10 col-xs-12">
            <div class="box-content card white">
                <dl class="dl-horizontal">
                    <dt>
                        Empresa
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.nombreEmpresa)
                    </dd>

                    <dt>
                        Contacto
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.nombreContacto)
                    </dd>

                    <dt>
                        Teléfono
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.telefono)
                    </dd>

                    <dt>
                        Correo electrónico
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.email)
                    </dd>

                    <dt>
                        Tipo de empresa
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.tipoEmpresa)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Eliminar" class="btn btn-danger" style="background-color:navy" />
                    </div>
                    <div class="big mb-1" style="color: red;">
                        @ViewBag.Error
                    </div>
                    <div>
                        @Html.ActionLink("Volver a la lista", "Index")
                    </div>
                }
            </div>
        </div>
    </div>
</div>
