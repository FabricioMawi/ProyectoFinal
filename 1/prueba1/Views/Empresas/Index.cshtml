@model IEnumerable<prueba1.Models.Empresa>

@{
    ViewBag.Title = "Index";
}

<h2>Empresas</h2>



@using (Html.BeginForm())
{
    <p>
        @Html.TextBox("SearchString")
        <input type="submit" value="Buscar" class="btn btn-primary btn-sm" style="background-color:navy" />
    </p>
}
<p>
    @Html.ActionLink("Agregar", "Create")

</p>

<div class="row justify-content-center">
    <table class="table table-striped table-bordered display dataTable" style="color:steelblue">
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Contacto
            </th>
            <th>
                Teléfono
            </th>
            <th>
                Correo electrónico
            </th>
            <th>
                Tipo de empresa
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nombreEmpresa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nombreContacto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tipoEmpresa)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.idContacto }) |
                    @Html.ActionLink("Ver contenido", "Details", new { id = item.idContacto }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.idContacto })
                </td>
            </tr>

        }

    </table>
    <div>
        @Html.ActionLink("Crear reportes de empresa", "Reporte")
    </div>
</div>
